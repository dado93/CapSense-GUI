#:kivy 1.11.1
#:import TopBar top_bar

<TopBar>:
    start_streaming_button: _start_button
    stop_streaming_button: _stop_button
    battery_label: _battery_label
    padding: '2sp'
    canvas:
        Color:
            rgba: 1, 1, 1, .6
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1, None
    height: '45sp'
    Label:
        size_hint: None, 1
        width: '108sp'
        text: 'MIP Board GUI'
    Widget:
    Button:
        id: _start_button
        disabled: True
        size_hint: None, 1
        width: '108sp'
        text: 'Start'
        on_release: root.start_streaming()
    Button:
        id: _stop_button
        disabled: True
        size_hint: None, 1
        width: '108sp'
        text: 'Stop'
        on_release: root.stop_streaming()
    ColoredLabel:
        id: _battery_label
        size_hint: None, 1
        width: '108sp'
        text: 'Battery: '

<ColoredLabel>:
    canvas.before:
        Color:
            rgba: (1.0, 0., 0., 0.7)
        Rectangle:
            size: self.size
            pos: self.pos