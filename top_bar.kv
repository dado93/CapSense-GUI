#:kivy 1.11.1
#:import TopBar top_bar

<TopBar>:
    padding: '2sp'
    canvas:
        Color:
            rgba: 1, 1, 1, .6
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1, None
    height: '45sp'
    Label:
        size_hint: None, 1
        width: '108sp'
        text: 'MIP Board GUI'
    Widget:
    Button:
        size_hint: None, 1
        width: '108sp'
        text: 'Start'
        on_release: root.start_streaming()
    Button:
        size_hint: None, 1
        width: '108sp'
        text: 'Stop'
        on_release: root.stop_streaming()
    Label:
        size_hint: None, 1
        width: '108sp'
        text: 'Battery: '