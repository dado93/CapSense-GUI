#:kivy 1.11
#:import Toolbar mip.widgets.toolbars
#:import BottomBar mip.widgets.toolbars 
#:import GraphManager mip.widgets.graph_tabs 

<ContainerLayout>:
    toolbar: _toolbar
    bottom_bar: _bottom_bar
    progress_bar: _progress_bar
    top_bar: _top_bar
    graph_manager: _graph_manager
    orientation: 'vertical'
    spacing: 10
    padding: 20
    TopBar:
        id: _top_bar
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1.0, 0.89
        spacing: 10
        Toolbar:
            id: _toolbar
            disabled: True
            size_hint: 0.2, 1.0
        GraphManager:
            id: _graph_manager
    ProgressBar:
        id: _progress_bar
        size_hint_y: 0.01
        value: 0
    BottomBar:
        id: _bottom_bar
        size_hint: 1.0, 0.1