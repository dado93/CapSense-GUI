#:kivy 1.11

<Toolbar>:
    orientation:'vertical'
    spacing: 10
    padding: 10
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1.0)
        Rectangle:
            size: self.size
            pos: self.pos
    ToolbarButton:
        text: 'Sample Rate'
        on_release: root.sample_rate_dialog()
    
    ToolbarButton:
        text: 'T&RH Config'
        on_release: root.temp_rh_dialog()
    
    ToolbarButton:
        id: _sd_card_button
        text: 'SD Card'
    
    ToolbarButton:
        id: _sd_load_button
        text: 'Load SD Data'
    
    ToolbarButton:
        id: _export_button
        text: 'Data Export'

    ToolbarButton:
        id: _info_button
        text: 'Info'

    Widget:

<ToolbarButton@Button>:
    size_hint_y: 0.1